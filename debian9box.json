{
  "_comment": "Variables are defined in variables.json.",
  "_comment": "Current variables are",
  "_comment": "---- output_dir  -----",
  "_comment": "----- box_name  ------",
  "_comment": "-----------------------------",
  "_comment": "NOTE: please copy variables-example.json to variables.json",

  "builders": [
    {
      "type": "vagrant",
      "communicator": "ssh",
      "source_path": "bento/debian-9",
      "provider": "virtualbox",
      "add_force": true,
      "skip_add": true,
      "box_name": "{{user `box_name`}}"
    }
  ],

  "provisioners": [
    {
      "type": "shell",
      "script": "{{ template_dir }}/scripts/ansible.sh"
    },
    { 
      "type": "ansible-local",
      "playbook_dir": "{{ template_dir }}/ansible/",
      "playbook_file": "{{ template_dir }}/ansible/debian9-box.yml",
      "galaxy_file": "{{ template_dir }}/ansible/requirements.yml"

    }
  ],
  "post-processors": 
    [
     {
       "type": "shell-local",
       "inline": 
         [
           "c:\\cmder\\vendor\\git-for-windows\\bin\\bash.exe -c \"cp -f '{{ template_dir }}\\output-vagrant\\package.box' '{{user `output_dir`}}/{{user `box_name`}}.box'\"",
           "c:\\cmder\\vendor\\git-for-windows\\bin\\bash.exe -c \"vagrant box add --force --name {{user `box_name`}} '{{user `output_dir`}}/{{user `box_name`}}.box'\""
       	
         ]
      }
    ]
}
